{{> header }}

<!--TEMP FORM-->
<div class="container">

    <h1>{{title}}</h1>

    <!-- Display All Validation Errors In A Div To User -->
    {{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">
          {{this.msg}}
        </div>
      {{/each}}
    {{/if}}

<!-- REGISTRATION FORM -->
    <form method="post" action="/register" id='uploadForm' encType="multipart/form-data">
        <!--USER NAME-->
        <div class="form-group">
            <label for="username">name
            </label>
            <input type="text" name="name" class="form-control" placeholder="name">
        </div>
        <!--EMAIL-->
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <!--REGION-->
        <div class="form-group">
            <label for="Region">Region</label>
            <input type="text" class="form-control" name="Region" placeholder="Enter Region">
        </div>
        <!--PASSWORD-->
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password">
        </div>
        <!--PASSWORD-->
        <div class="form-group">
            <label for="passwordMatch">Re-Enter Password</label>
            <input type="password" name="passwordMatch" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <!--Img Upload-->
        <div class="form-group">
            <label for="image">Upload Img</label>
            <input type="file" name="signature" class="form-control">
        </div>
        <!--Button-->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

{{> footer-end }}
